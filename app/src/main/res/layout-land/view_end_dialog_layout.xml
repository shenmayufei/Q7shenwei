<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/code_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/code_setting"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvConditionQuery"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <View
            android:id="@+id/view_end_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />

        <TextView
            android:id="@+id/balance_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/electronic_scale"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/balance_set_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/calibration"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/balance_set_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/reset"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/balance_set_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/Peeled"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/balance_set_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/Peeled"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/view_end_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />


        <TextView
            android:id="@+id/other_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/Other"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/other_set_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/Fill_light_and_fan"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/other_set_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/Height_calibration"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/view_end_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />


        <TextView
            android:id="@+id/options_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/functional_options"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/options_set_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/scan_code"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/options_set_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/weigh"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/options_set_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/volume"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/options_set_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/photograph"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/view_end_line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_color" />


        <TextView
            android:id="@+id/exit_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/exit_settings"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

