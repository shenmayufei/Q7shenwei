<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/black"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:scaleType="fitStart"
        android:id="@+id/title_settings"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:padding="5dp"
        android:src="@drawable/icon_settings"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title_camera_state"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:text="@string/title_camera_state_false"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/title_weight_state"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:text="@string/title_weight_state_false"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/title_count"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="right|center"
        android:text="@string/title_count"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/title_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="left|center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded" />

</LinearLayout>